<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(DefaultLayout)">
            <NotAuthorized>
                <AuthorizeView Roles="@AuthRoles.User" Context="LoggedInButUnauthorized">
                    <Authorized>
                        <UnauthorizedContent />
                    </Authorized>
                    <NotAuthorized>
                        <LoginRedirect />
                    </NotAuthorized>
                </AuthorizeView>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(DefaultLayout)">
            <NotFoundContent />
        </LayoutView>
    </NotFound>
</Router>